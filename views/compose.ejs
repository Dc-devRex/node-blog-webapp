<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" type="text" id="postTitle" name="postTitle">
    </div>
    <div class="form-group">
        <label for="blogPost">Post</label>
        <textarea class="form-control" id="blogPost" name="blogPost" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="buttonSubmit">Publish</button>
</form>

<%- include("partials/footer") -%>